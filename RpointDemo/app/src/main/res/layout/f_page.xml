<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.rpointdemo.MainActivity">


    <TextView
        android:layout_width="908dp"
        android:layout_height="76dp"
        android:text="Choose Frequncy of Drinking"
        android:textSize="60dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.016"
        app:layout_constraintHorizontal_bias="0.287"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="344dp"
        android:layout_height="71dp"
        android:text="Choose option"
        android:textSize="50dp"
        tools:layout_editor_absoluteY="146dp"
        tools:layout_editor_absoluteX="548dp" />
<!-- times of drinking-->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="344dp"
        android:layout_height="71dp"
        android:text="Choose option"
        android:textSize="50dp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="146dp" />

    <Spinner
        android:id="@+id/times_id"
        android:layout_width="158dp"
        android:layout_height="91dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintVertical_bias="0.433"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/textView"
        android:background="@drawable/my_borders"
        />


    <Spinner
        android:id="@+id/over_time_id"
        android:layout_width="154dp"
        android:layout_height="93dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.742"
        app:layout_constraintVertical_bias="0.434"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/my_borders"
        />

    <TextView
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="a"
        android:textSize="70sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.426"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/textView"
        app:layout_constraintRight_toLeftOf="@+id/over_time_id"
        app:layout_constraintHorizontal_bias="0.753" />

    <Button
        android:id="@+id/freq_button"
        android:layout_width="391dp"
        android:layout_height="121dp"
        android:text="continue"
        android:textSize="70dp"
        android:onClick="onFreqClick"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintVertical_bias="0.876"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />




</android.support.constraint.ConstraintLayout>