<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.rpointdemo.MainActivity">


    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RadioButton android:id="@+id/once_a_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Once_a_Month"
        android:onClick="onRadioButtonClicked"/>
    <RadioButton android:id="@+id/once_aweek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Once a Year"
        android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/once_a_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Once a Day"
            android:onClick="onRadioButtonClicked"/>
</RadioGroup>

    <EditText
        android:id="@+id/freq_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hoe Frequently do you drink"
        />

</android.support.constraint.ConstraintLayout>